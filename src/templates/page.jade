extends layout

block append vars
  - bodyclass = 'page'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  .blog-header
    h1.blog-title= page.title

block main
  .row
    .col-sm-12.blog-main
      .blog-post
        section!= typogr(page.html).typogrify()
      //
        /.blog-post
      ul.pager
        li.previous
          a(href=contents.index.url) &larr; Voltar
    //
      /.blog-main
