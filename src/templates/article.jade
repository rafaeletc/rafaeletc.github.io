
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "Escrito por " }
    mixin author(page.metadata.author)

block content
  article.article
    header
      p.date
        span= moment(page.metadata.date).lang('pt-br').format('DD \\d\\e MMMM \\d\\e YYYY')
    section.content!= typogr(page.html).typogrify()

